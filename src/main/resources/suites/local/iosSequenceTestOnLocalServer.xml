<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Parallel test" verbose="2" preserve-order="false" parallel="none" thread-count="5">
    <listeners>
        <listener class-name="listeners.TestListener"/>
    </listeners>

    <test name="Authentication">
        <parameter name="platformType" value="IOS"/>
        <classes>
            <class name="testV1.authen.SignUpTest">
                <methods>
                    <include name="signUpWithCorrectCredentials">
                        <parameter name="configureFile"
                                   value="deviceCapConfig/devicesOnLocal/ios/mobile1.properties"/>
                    </include>

                    <include name="signUpWithInvalidCredentials">
                        <parameter name="configureFile"
                                   value="deviceCapConfig/devicesOnLocal/ios/mobile2.properties"/>
                    </include>

                </methods>
            </class>

        </classes>
    </test>
</suite>
